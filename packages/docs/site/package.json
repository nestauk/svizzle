	"scripts": {
		"sitebuild": "sapper build --legacy",
		"cy:open": "cypress open",
		"cy:run": "cypress run",
		"dev": "npm run rmsappers && sapper dev",
		"chmod": "chmod u+x src/bin/*",
		"export": "npm run chmod && node -r svelte/register src/bin/makeEntries.js | xargs sapper export --legacy --basepath svizzle --concurrent 1 --entry",
		"lint": "eslint --max-warnings=0 rollup.config.js 'src/**/*.{js,svelte}'",
		"makeTRVdata": "npm run chmod && rimraf static/data/*.csv && node src/bin/makeRandomIndicators.js",
		"outdated": "npm outdated",
		"rmsappers": "rimraf __sapper__ src/node_modules/@sapper",
		"start": "node __sapper__/build",
		"TODO_test": "run-p --race dev cy:run"
	},
